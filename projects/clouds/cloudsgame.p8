--main
spr_cloud_e = 1
spr_cloud_i = 2

clouds = {}

function _init()
    local cloud = {}
    cloud.x = 64
    cloud.y = 64
    cloud.draw = function()
        spr(spr_cloud_e, self.x, self.y)
        spr(spr_cloud_i, self.x+8, self.y)
        spr(spr_cloud_e, self.x+16, self.y, true)
    end
    add(clouds, cloud)
end

function _draw()
    for c in all(clouds) do
        c:draw()
    end
end

