pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
spl=[[
really cool fireball by dw817
(08-23-18)
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

this fireball ignites only
pixels that are set to burn.

if you move too many pixels
though, you will get flicker,
so you need to control the
number that are manipulated.

arrow keys navigate
(o) make fireball bigger
(x) make fireball smaller

runs best offline
]]

-- main program ---------------

function main()

cls()
print(spl,6,16,13)
repeat
until btnp(ğŸ…¾ï¸)
x=64 y=64 c={1,2,8,9,10} s=10
for i=1,5 do
  pal(i,c[i],1)
end
repeat
  for i=1,2100 do
    a=rnd(128) b=rnd(128)
    p=pget(a,b)
    if (p<=5) pst(a-1+rnd(2),b-2+rnd(3),p)
    if (p>0) pst(a,b,p-1)
  end
  circle(x,y,s,5)
  if (btn(â¬…ï¸)) x-=2
  if (btn(â¡ï¸)) x+=2
  if (btn(â¬†ï¸)) y-=2
  if (btn(â¬‡ï¸)) y+=2
  if (btn(ğŸ…¾ï¸) and s<12) s+=1
  if (btn(â) and s>1) s-=1
  flip()
until forever
end--main()

-- functions ------------------

-- draw circle only atop ignite
-- pixels
function circle(x,y,r,c)
local i,j,xo,yo,ba=0,0,0,r,3-2*r
  repeat
    for i=-1,1,2 do
      for j=-1,1,2 do
        hlin(x,y+yo*i,x+xo*j,c)
        hlin(x,y+xo*i,x+yo*j,c)
      end
    end
    if (ba<0) ba+=6+4*xo else ba+=10+4*(xo-yo) yo-=1
    xo+=1
  until xo>yo
end--circle(....)

-- draw horizontal line only
-- atop ignite pixels
function hlin(x,y,z,c)
local i
  for i=x,z,sgn(z-x) do
    pst(i,y,c)
  end
end--hlin(....)

-- draw pixels only atop ignite
-- pixels
function pst(x,y,c)
local p=pget(x,y)
  if (p<0 or p>5) return
  pset(x,y,c)
end--pst(...)

-- end of functions

main()

